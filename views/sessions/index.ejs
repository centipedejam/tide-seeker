<%- include('../partials/header') %>

    <div class="container vh-100">
        <h1 class="text-center mb-5">
            <%= title%>
        </h1>
        <% sessions.forEach(function(s) {%>
            <div class="card m-auto mb-5" style="width: 40vmin">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=s.date%>
                    </h5>
                    <p class="card-text">
                        Swell: <%=s.size %>
                            <%=s.swellDirection %>
                    </p>
                    <p class="card-text">
                        Wind: <%=s.windDirection %>
                            <%=s.windStrength %>
                    </p>
                    <p class="card-text mb-3">
                        Comments: <%=s.description %>
                    </p>
                </div>
                <a class="btn btn-primary" href="/sessions/<%= s._id%>">View Session</a>
                <% if (user && s.user.equals(user._id)) {%>
                    <div class="row">
                        <div class="col-6">
                            <form action="/sessions/<%= s._id %>/edit" method="GET">
                                <button class="btn btn-warning" type="submit">Edit
                                    Session</button>
                            </form>
                        </div>
                        <div class="col-6">
                            <form action="/sessions/<%= s._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger" type="submit">Delete
                                    Session</button>
                            </form>
                        </div>
                    </div>
                    <%}%>
            </div>
            <%}) %>
    </div>
    <%- include('../partials/footer') %>